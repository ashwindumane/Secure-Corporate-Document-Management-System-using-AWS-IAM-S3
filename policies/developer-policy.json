{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowBucketVisibility",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowEngineeringBucketList",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::corp-secure-docs-ashwin",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "",
            "engineering-docs",
            "engineering-docs/*"
          ]
        }
      }
    },
    {
      "Sid": "AllowEngineeringReadOnlyAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::corp-secure-docs-ashwin/engineering-docs/*"
    }
  ]
}
